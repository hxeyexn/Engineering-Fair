<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="view.FirstActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:contentInsetStart="0dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="사용자 정보 등록"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:fontFamily="@font/nanumsquareb" />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:id="@+id/signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="아이디 및 비밀번호"
                android:fontFamily="@font/nanumsquareeb"
                android:textSize="17sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="아이디"
                android:fontFamily="@font/nanumsquareb"
                android:textSize="15sp" />
            <EditText
                android:id="@+id/Id"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:padding="10dp"
                android:background="@drawable/border"
                android:hint="아이디"
                android:fontFamily="@font/nanumsquarer"
                android:text=""
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="비밀번호"
                android:fontFamily="@font/nanumsquareb"
                android:textSize="15sp" />
            <EditText
                android:id="@+id/Pw"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="30dp"
                android:padding="10dp"
                android:background="@drawable/border"
                android:hint="123456(6자)"
                android:inputType="numberPassword"
                android:maxLength="6"
                android:text=""
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="비콘 소지자 정보"
                android:fontFamily="@font/nanumsquareeb"
                android:textSize="17sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="이름"
                android:fontFamily="@font/nanumsquareb"
                android:textSize="15sp" />
            <EditText
                android:id="@+id/UserName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:padding="10dp"
                android:background="@drawable/border"
                android:hint="비콘 소지자 이름"
                android:inputType="textPersonName"
                android:text=""
                android:textSize="15sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="주민등록번호"
                android:fontFamily="@font/nanumsquareb"
                android:textSize="15sp"/>
            <EditText
                android:id="@+id/Rrn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:padding="10dp"
                android:background="@drawable/border"
                android:hint="'-'를 제외하고 13자리 입력"
                android:fontFamily="@font/nanumsquarer"
                android:text=""
                android:textSize="15sp"
                android:maxLength="13" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="비콘 소지자 휴대전화"
                android:fontFamily="@font/nanumsquareb"
                android:textSize="15sp"/>
            <EditText
                android:id="@+id/Phone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:padding="10dp"
                android:background="@drawable/border"
                android:hint="'-'를 제외하고 입력"
                android:fontFamily="@font/nanumsquarer"
                android:inputType="phone"
                android:maxLength="11"
                android:text=""
                android:textSize="15sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="비콘 UUID"
                android:fontFamily="@font/nanumsquareb"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/BeaconUUID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:padding="10dp"
                android:background="@drawable/border"
                android:text="" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="비콘 MAC"
                android:fontFamily="@font/nanumsquareb"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/BeaconMAC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:padding="10dp"
                android:background="@drawable/border"
                android:text="" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="국적"
                android:fontFamily="@font/nanumsquareb"
                android:textSize="15sp" />
            <Spinner
                android:id="@+id/Nationality"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="성별"
                android:fontFamily="@font/nanumsquareb"
                android:textSize="15sp" />
            <Spinner
                android:id="@+id/Sex"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:textSize="15sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="신장"
                        android:fontFamily="@font/nanumsquareb"
                        android:textSize="15sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/Height"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="4"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="20dp"
                            android:padding="10dp"
                            android:background="@drawable/border"
                            android:hint="180"
                            android:fontFamily="@font/nanumsquarer"
                            android:inputType="number"
                            android:text=""
                            android:textSize="15sp" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="5dp"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:text="cm"
                            android:fontFamily="@font/nanumsquarer"
                            android:textSize="15sp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="몸무게"
                        android:fontFamily="@font/nanumsquareb"
                        android:textSize="15sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/Weight"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="4"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="20dp"
                            android:padding="10dp"
                            android:background="@drawable/border"
                            android:hint="60"
                            android:fontFamily="@font/nanumsquarer"
                            android:inputType="number"
                            android:text=""
                            android:textSize="15sp" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:text="kg"
                            android:fontFamily="@font/nanumsquarer"
                            android:textSize="15sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="혈액형"
                    android:fontFamily="@font/nanumsquareb"
                    android:textSize="15sp" />
                <Spinner
                    android:id="@+id/Blood"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="30dp"
                    android:fontFamily="@font/nanumsquarer"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="보호자 정보"
                    android:fontFamily="@font/nanumsquareeb"
                    android:textSize="17sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="이름"
                    android:fontFamily="@font/nanumsquareb"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/ProtectorName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="20dp"
                    android:padding="10dp"
                    android:background="@drawable/border"
                    android:hint="보호자 이름"
                    android:fontFamily="@font/nanumsquarer"
                    android:inputType="textPersonName"
                    android:text=""
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="보호자 휴대전화"
                    android:fontFamily="@font/nanumsquareb"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/ProtectorPhone"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="40dp"
                    android:padding="10dp"
                    android:background="@drawable/border"
                    android:hint="'-'를 제외하고 입력"
                    android:fontFamily="@font/nanumsquarer"
                    android:inputType="phone"
                    android:text=""
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/enroll"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:text="등록하기"
                    android:textSize="15sp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

